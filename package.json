{
  "name": "tech-interview",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev:backend": "cd apps/backend && uvicorn app.main:app --host 127.0.0.1 --port 8000 --reload",
    "dev": "turbo dev && npm run dev:backend",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.12",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@9.8.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
